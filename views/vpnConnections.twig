<!DOCTYPE html>

<html lang="en">
{% include 'head.twig' %}
<body>
    {% include 'header.twig' %}

    <ul class="menu">
      <li class="active"><a href="{{ requestRoot|e}}connections">Connections</a></li>
      <li><a href="{{ requestRoot|e}}users">Users</a></li>
      <li><a href="{{ requestRoot|e}}info">Info</a></li>
      <li><a href="{{ requestRoot|e}}stats">Stats</a></li>
      <li><a href="{{ requestRoot|e}}log">Log</a></li>
    </ul>

    {% for pool in connections %}
        <h2 id="{{ pool.id|e }}">{{ idNameMapping[pool.id]|e }}</h2>
        {% if pool.connections is empty %}
            <p class="block">No clients connected.</p>
        {% else %}
            <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>IP address</th>
                </tr>
            </thead>
            <tbody>
                {% for connection in pool.connections %}
                <tr>
                    <td>
                        <a href="{{ requestRoot|e }}user?user_id={{ connection.user_id|e }}">{{ connection.user_id|e }}</a>
                    </td>
                    <td>
                        <a href="{{ requestRoot|e }}configuration?user_id={{ connection.user_id|e }}&config_name={{ connection.name|e }}">{{ connection.name|e }}</a>
                    </td>
                    <td>
                        <ul class="simple">
                            {% for ip in connection.virtual_address|sort %}
                            <li><code>{{ ip|e }}</code></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            </table>
        {% endif %}
    {% endfor %}

    {% include 'footer.twig' %}
</body>
</html>
