{% set activeItem = 'messages' %}
{% extends "base.twig" %}
{% block content %}

    <h2>{% trans "System" %}</h2>
    <p>
        {% trans %}All users will see this "Message of the Day" (MOTD) message when logging in to the portal, or when connecting to the VPN using an application supporting the API.{% endtrans %}
    </p>

    <form method="post">
        <fieldset>
            <label for="motd_message">{% trans "MOTD" %}</label>
            <textarea id="motd_message" name="message_body" rows="8">{% if motdMessage %}{{ motdMessage.message }}{% endif %}</textarea>
        </fieldset>
        <fieldset>
            <button name="message_action" value="set" type="submit">{% trans "Set" %}</button>
            {% if motdMessage %}
                <input type="hidden" name="message_id" value="{{ motdMessage.id }}">
                <button name="message_action" value="delete">{% trans "Delete" %}</button>
            {% endif %}
        </fieldset>
    </form>
{% endblock %}
