{% extends "base.twig" %}
{% block content %}
    <ul class="menu">
        <li class="active"><span>{% trans "Sign In" %}</span></li>
    </ul>

    <p>
        {% trans "Please sign in with your username and password." %}
    </p>

    {% if _form_auth_invalid_credentials %}
        <p class="error">
            {% trans "The credentials you provided were not correct." %}
        </p>
    {% endif %}

    <form method="post" action="{{ requestRoot }}_form/auth/verify">
        <fieldset>
            {% if _form_auth_invalid_credentials %}
                <label for="userName">{% trans "Username" %}</label>
                <input size="30" type="text"     id="userName" name="userName" autocapitalize="off" placeholder="{% trans 'Username' %}" value="{{ _form_auth_invalid_credentials_user }}" required>
                <label for="userPass">{% trans "Password" %}</label>
                <input size="30" type="password" id="userPass"name="userPass" placeholder="{% trans 'Password' %}" autofocus required>
            {% else %}
                <label for="userName">{% trans "Username" %}</label>
                <input size="30" type="text"     id="userName" name="userName" autocapitalize="off" placeholder="{% trans 'Username' %}" autofocus required>
                <label for="userPass">{% trans "Password" %}</label>
                <input size="30" type="password" id="userPass" name="userPass" placeholder="{% trans 'Password' %}" required>
            {% endif %} 
        </fieldset>
        <fieldset>
            <input type="hidden" name="_form_auth_redirect_to" value="{{ _form_auth_redirect_to }}">
            <button type="submit">{% trans "Sign In" %}</button>
        </fieldset>
    </form>
{% endblock %}
