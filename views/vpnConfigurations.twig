<!DOCTYPE html>

<html lang="en">
{% include 'head.twig' %}
<body>
    {% include 'header.twig' %}

    <ul class="mainMenu">
      <li><a href="connections">Connections</a></li>
      <li class="active"><a href="configurations">Configurations</a></li>
      <li><a href="info">Info</a></li>
      <li><a href="log">Log</a></li>
      <li><a href="documentation">Documentation</a></li>
    </ul>

    <h2>Configurations</h2>
    <p>
        {% if userId %}
            This page lists VPN configurations for <em>{{ userId|e }}</em>. See <a href="configurations">all</a>.
        {% else %}
            This page lists all VPN configurations.
        {% endif %}
    </p>

    {% if configs is not empty %}
        <table class="horizontal">
            <thead>
                {% if userId %}
                    <tr><th>Name</th><th>Expires ({{ date()|date('T') }})</th><th></th></tr> 
                {% else %}
                    <tr><th>User ID</th><th>Name</th><th>Expires ({{ date()|date('T') }})</th><th></th></tr> 
                {% endif %}
            </thead>
            <tbody>
            {% for config in configs %}
                <tr>
                    {% if not userId %}
                        <td><a href="configurations?userId={{ config.user_id|e }}">{{ config.user_id|e }}</a></td>
                    {% endif %}
                    {% if userId %}
                        {% if 'E' == config.state or 'R' == config.state %}
                            <td>{{ config.name|e }}</td>
                        {% else %}
                            <td><a href="edit?for_user={{ userId|e }}&common_name={{ config.user_id|e }}_{{ config.name|e }}">{{ config.name|e }}</a></td>
                        {% endif %}
                    {% else %}
                        {% if 'E' == config.state or 'R' == config.state %}
                        <td>{{ config.name|e }}</td>
                        {% else %}
                        <td><a href="edit?common_name={{ config.user_id|e }}_{{ config.name|e }}">{{ config.name|e }}</a></td>
                        {% endif %}
                    {% endif %}
                    <td>{{ config.exp|e|date('Y-m-d H:i:s') }}</td>
                    <td class="text-right">
                        {% if 'D' == config.state %}
                            <span class="label label-warning">Disabled</span>
                        {% elseif 'V' == config.state %}
                            <span class="label label-success">Active</span>
                        {% elseif 'R' == config.state %}
                            <span class="label">Revoked</span>
                        {% elseif 'E' == config.state %}
                            <span class="label label-disabled">Expired</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% include 'footer.twig' %}
</body>
</html>
